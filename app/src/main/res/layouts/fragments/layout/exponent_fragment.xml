<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
                android:id="@+id/cardViewMain"
                app:layout_constraintTop_toTopOf="parent"
                app:cardCornerRadius="60sp"
                app:cardBackgroundColor="#C2A7C6"
                android:layout_marginTop="15dp"
                android:layout_width="550dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="125dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="125dp">
            <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_width="551dp"
                    android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputLayout
                        android:layout_marginRight="10dp"
                        app:boxBackgroundColor="#B0A1B1"
                        app:counterEnabled="true"
                        app:counterMaxLength="2"
                        app:counterTextColor="@color/white"
                        app:helperText="base"
                        android:gravity="center"
                        android:layout_width="150dp"
                        android:layout_height="220dp"
                        android:textColorHint="@color/white"
                        app:helperTextTextColor="@color/white"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="25dp"
                        android:id="@+id/textInputLayoutBase">
                    <!-- app:hintTextAppearance="@style/TextLabel" can set detail text layout on xml file thru tage <style>-->
                    <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/textInputEditTextBase"
                            android:inputType="number"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="180sp"
                            android:textSize="120sp"
                            android:maxLength="5"
                            android:hint="0"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout

                        app:boxBackgroundColor="#B0A1B1"
                        app:counterEnabled="true"
                        app:counterMaxLength="2"
                        app:counterTextColor="@color/white"
                        app:helperText="exponent"
                        android:gravity="center"
                        android:layout_width="150dp"
                        android:layout_height="220dp"
                        android:textColorHint="@color/white"
                        app:helperTextTextColor="@color/white"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="25dp"
                        android:id="@+id/textInputLayoutExpo">
                    <!-- app:hintTextAppearance="@style/TextLabel" can set detail text layout on xml file thru tage <style>-->
                    <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/textInputEditTextExpo"
                            android:inputType="number"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="180sp"
                            android:textSize="120sp"
                            android:maxLength="5"
                            android:hint="0"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="calculate"
                android:background="@drawable/button_rectangle"
                android:textColor="@color/white"
                android:width="250dp"
                android:height="50dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/cardViewMain"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

        <androidx.cardview.widget.CardView
                app:cardBackgroundColor="#C2A7C6"
                app:cardCornerRadius="30sp"
                android:layout_marginTop="10dp"
                android:layout_height="70sp"
                android:layout_width="550dp"
                app:layout_constraintTop_toBottomOf="@+id/button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <ImageView
                        android:src="@mipmap/speak"
                        android:layout_width="65sp"
                        android:layout_height="40sp"
                        android:id="@+id/imageView"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="45dp"
                        app:layout_constraintVertical_bias="0.533"/>
                <TextView
                        android:textColor="@color/white"
                        android:gravity="center_vertical"
                        android:text="n"
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:id="@+id/textViewBase"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/imageView"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginStart="16dp"
                        app:layout_constraintVertical_bias="0.513"/>
                <TextView
                        android:textColor="@color/white"
                        android:gravity="center_vertical"
                        android:text="k"
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:id="@+id/textViewExpo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/textViewBase"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintVertical_bias="0.081"/>
                <TextView
                        android:textColor="@color/white"
                        android:gravity="center_vertical"
                        android:text="= y"
                        android:textStyle="bold"
                        android:textSize="24sp"
                        android:id="@+id/textViewResult"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/textViewExpo"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintVertical_bias="0.513"
                        android:layout_marginStart="8dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>