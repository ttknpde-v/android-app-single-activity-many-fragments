<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/constraintMain"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
            android:id="@+id/cardInput"
            app:cardCornerRadius="25sp"
            app:cardBackgroundColor="#C2A7C6"
            app:layout_constraintTop_toTopOf="@+id/constraintMain"
            android:layout_width="match_parent"
            android:layout_height="520sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintMainInsideCardInput"
                android:layout_width="756dp"
                android:layout_height="497dp">
            <LinearLayout
                    app:layout_constraintTop_toTopOf="@+id/constraintMainInsideCardInput"
                    android:id="@+id/layoutOfCarPrice"
                    android:padding="10sp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraintMainInsideCardEdit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <TextView
                            android:textStyle="bold"
                            android:text="Auto price"
                            android:padding="2sp"
                            android:textSize="60sp"
                            android:layout_margin="10sp"
                            android:layout_width="290sp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:id="@+id/textViewCarPrice"
                            app:layout_constraintTop_toTopOf="@+id/constraintMainInsideCardEdit"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/editTextTotalPrice"
                            app:layout_constraintBottom_toBottomOf="parent"
                    />
                    <EditText
                            app:layout_constraintTop_toTopOf="@+id/constraintMainInsideCardEdit"
                            android:hint="0.00"
                            android:textColorHint="@color/white"
                            android:textColor="@color/white"
                            android:padding="2sp"
                            android:textSize="60sp"
                            android:inputType="numberDecimal"
                            android:layout_margin="10sp"
                            android:layout_width="240sp"
                            android:layout_height="wrap_content"
                            android:id="@+id/editTextTotalPrice"
                            app:layout_constraintStart_toEndOf="@+id/textViewCarPrice"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginStart="44dp"/>
                    <TextView
                            android:textStyle="bold"
                            app:layout_constraintTop_toTopOf="@+id/constraintMainInsideCardEdit"
                            android:text="฿"
                            android:textColor="@color/white"
                            android:textSize="60dp"
                            android:layout_margin="10sp"
                            android:layout_width="60sp"
                            android:layout_height="wrap_content"
                            android:id="@+id/textViewUnit"
                            app:layout_constraintStart_toEndOf="@+id/editTextTotalPrice"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                    />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/layoutOfDownPayment"
                    android:padding="10sp"
                    app:layout_constraintTop_toBottomOf="@+id/layoutOfCarPrice"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraintMainInsideCardInputOrder2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <TextView
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:text="Down payment"
                            android:textSize="60sp"
                            android:layout_margin="10sp"
                            android:layout_width="410sp"
                            android:layout_height="wrap_content"
                            android:id="@+id/textCarDownPayment"
                            app:layout_constraintTop_toTopOf="@+id/constraintMainInsideCardInputOrder2"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/editTextDownPayment"
                            app:layout_constraintVertical_bias="0.583"/>
                    <EditText
                            app:layout_constraintTop_toTopOf="@+id/constraintMainInsideCardInputOrder2"
                            android:hint="0.00"
                            android:textColorHint="@color/white"
                            android:textColor="@color/white"
                            android:padding="2sp"
                            android:textSize="60sp"
                            android:inputType="numberDecimal"
                            android:layout_margin="10sp"
                            android:layout_width="130sp"
                            android:layout_height="wrap_content"
                            android:id="@+id/editTextDownPayment"
                            app:layout_constraintStart_toEndOf="@+id/textCarDownPayment"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintVertical_bias="0.55"
                            />
                    <TextView
                            android:textStyle="bold"
                            app:layout_constraintTop_toTopOf="@+id/constraintMainInsideCardInputOrder2"
                            android:text="฿"
                            android:textColor="@color/white"
                            android:textSize="60dp"
                            android:layout_margin="10sp"
                            android:layout_width="60sp"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toEndOf="@+id/editTextDownPayment"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:id="@+id/textView"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/layoutOfInterestPerYear"
                    android:padding="10sp"
                    app:layout_constraintTop_toBottomOf="@+id/layoutOfDownPayment"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraintMainInsideCardInputOrder3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <TextView
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:text="Interest/Year"
                            android:padding="2sp"
                            android:textSize="60sp"
                            android:layout_margin="10sp"
                            android:layout_width="465sp"
                            android:layout_height="wrap_content"
                            android:id="@+id/textCarInterestPerYear"
                            app:layout_constraintTop_toTopOf="@+id/constraintMainInsideCardInputOrder3"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/editTextInterestPerYear"
                    />
                    <EditText
                            android:textColorHint="@color/white"
                            android:maxLength="4"
                            app:layout_constraintTop_toTopOf="@+id/constraintMainInsideCardInputOrder3"
                            android:hint="0"
                            android:textColor="@color/white"
                            android:padding="2sp"
                            android:textSize="60sp"
                            android:inputType="numberDecimal"
                            android:layout_margin="10sp"
                            android:layout_width="90sp"
                            android:layout_height="wrap_content"
                            android:id="@+id/editTextInterestPerYear"
                            app:layout_constraintStart_toEndOf="@+id/textCarInterestPerYear"
                            app:layout_constraintBottom_toBottomOf="parent"
                            />
                    <TextView
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            app:layout_constraintTop_toTopOf="@+id/constraintMainInsideCardInputOrder3"
                            android:text="%"
                            android:textSize="60dp"
                            android:layout_margin="10sp"
                            android:layout_width="70sp"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toEndOf="@+id/editTextInterestPerYear"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:id="@+id/textView2"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <LinearLayout
                    app:layout_constraintTop_toBottomOf="@+id/layoutOfInterestPerYear"
                    android:id="@+id/layoutOfLoadTerm"
                    android:padding="10sp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraintMainInsideCardInputOrder4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <TextView
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:text="Load Term"
                            android:padding="2sp"
                            android:textSize="60sp"
                            android:layout_margin="10sp"
                            android:layout_width="320sp"
                            android:layout_height="wrap_content"
                            android:id="@+id/textCarInstallment"
                            app:layout_constraintTop_toTopOf="@+id/constraintMainInsideCardInputOrder4"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                    />
                    <EditText
                            android:maxLength="1"
                            app:layout_constraintTop_toTopOf="@+id/constraintMainInsideCardInputOrder4"
                            android:hint="0"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            android:padding="2sp"
                            android:textSize="70sp"
                            android:inputType="number"
                            android:layout_margin="10sp"
                            android:layout_width="70sp"
                            android:layout_height="wrap_content"
                            android:id="@+id/editTextLoadTerm"
                            app:layout_constraintStart_toEndOf="@+id/textCarInstallment"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/textView3"
                    />
                    <TextView
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            app:layout_constraintTop_toTopOf="@+id/constraintMainInsideCardInputOrder4"
                            android:text="Year"
                            android:textSize="70sp"
                            android:layout_margin="10sp"
                            android:layout_width="180sp"
                            android:layout_height="0sp"
                            app:layout_constraintStart_toEndOf="@+id/editTextLoadTerm"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:id="@+id/textView3"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/layoutResultInterestCar"
            app:layout_constraintTop_toBottomOf="@+id/cardInput"
            android:layout_width="match_parent"
            android:layout_height="255sp"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">

        <androidx.appcompat.widget.AppCompatButton
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="Cal..."
                android:background="@drawable/button_rectangle"
                android:layout_margin="10sp"
                android:layout_gravity="center"
                android:id="@+id/button"
                android:textColor="@color/white"
                android:layout_width="100sp"
                android:layout_height="100sp"/>
        <LinearLayout
                android:gravity="center"
                android:layout_margin="10sp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:padding="5sp"
                    android:id="@+id/textViewTotalLoan"
                    android:textSize="25sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:padding="5sp"
                    android:id="@+id/textViewInterest"
                    android:textSize="25sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:padding="5sp"
                    android:id="@+id/textViewTotalInterest"
                    android:textSize="25sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:padding="5sp"
                    android:id="@+id/textViewTotalCost"
                    android:textSize="25sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:padding="5sp"
                    android:id="@+id/textViewInstallmentPerMonth"
                    android:textSize="25sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>